<h1> Repos by Year <%= "- #{params[:language]}" if params[:language] %> </h1>

<div id='chart'>
</div>

<script>
  window.Trends = {};

  $(function() {
    var chart = new Highcharts.Chart({
        colors: ["#7cb5ec", "#f7a35c"],
        chart: {
            type: 'column',
            renderTo: 'chart'
        },
        title: {
          style: {
            display: 'none'
          }
        },
        plotOptions: {
          column: {
            dataLabels: {
              enabled: true
            }
          }
        },
        xAxis: {
          type: 'datetime',
          categories: gon.years
        },
        series: [{
          name: 'Repos',
          data: gon.repos
        }]
    });
  });
</script>
